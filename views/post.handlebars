<div class='row display-flex justify-center text-center'>
  <div class='dish col-md-5 mb-5'>
    <h4 class='user-playing'>{{user.username}} is playing:</h4>
    <h6 class='playing-title'>{{game.title}}</h6>
      <img class='post-image my-1' alt="game cover" src={{game.img_url}}>
  </div>
  <div class='col-md-7 ind-user-post mb-5'>
      <h2 class='ind-review-user mb-5'>{{user.username}}'s Review</h2>
    <p class='ind-review mt-5 '>
      {{post_body}}
    </p>
  </div>
  <div class='add-comment-container mt-5'>
    <h2>
      Comments
    </h2>
    <form class='new-comment-form'>
      <label for='user_name'>
        Username:
      </label>
      <br />
      <textarea id='user_name' name='user_name' placeholder='Username' rows='2' cols='30'>
        {{user_name}}
      </textarea>
      <br />
      <label for='comment'>
        Comment:
      </label>
      <br />
      <textarea id='comment' name='comment' placeholder='Write your comments here.' rows='5' cols='30'>
        {{comment}}
      </textarea>
      <br />
      <button type='submit' value='Submit'>
        Comment
      </button>
    </form>
  </div>
</div>

