<div class='row display-flex justify-center text-center'>
  <div class='dish col-md-5 mb-5'>
    <h4 class='user-playing'>{{user.username}} is playing:</h4>
    <h6 class='playing-title'>{{game.title}}</h6>
      <img class='post-image my-1' alt="game cover" src={{game.img_url}}>

  </div>
  <div class='col-md-7 ind-user-post mb-5'>
      <h2 class='ind-review-user mb-5'>{{user.username}}'s Review</h2>
    <p class='ind-review mt-5 '>
      {{post_body}}
    </p>
  </div>
  <div class='add-comment-container mt-5'>
    <h2>
      Comments
    </h2>
    <form class = 'form create-comment'>
      <div class='form-group'>
      <label for='comment-input'>Comment:</label>
      <br/>
      <textarea type = 'text' class = 'form-input' id='comment-input' rows='5' cols='30'></textarea>
      </div> 
      <br />
      <div class = 'form-group'>
      <button type='submit'  id ='submit-button'>Comment</button>
     </div>
    </form>
  </div>
  <div class = 'row display-flex justify-center'>
    {{#if comments.length}}
    {{#each comments as |comment|}}
    <div class = 'col-md-8'>
      <h4>{{comment.user.username}}</h4>
      <div class = 'ind-user-comment'>
        <p>{{comment_body}}</p>
      </div>
    </div>
    {{/each}}
    {{/if}}
  </div>


</div>
<script src = '../js/comment.js'></script>

