<form class='form post-game'>
  <div class='form-group'>
    <label for='game-search'>Search a Game</label>
    <input class='form-input' type='text' id='game-search'></input>
  </div>
  <div class='form-group'>
    <button type='submit' class='btn btn primary' id='submit-game'>Submit Post</button>
  </div>
</form>

<div class='post-container flex-column'>
  <div class='card-header col-md-10'>
    <h2>GameJunkee</h2>
  </div>
  <div class='dish col-md-5'>
    <p>
      {{user.username}} is playing... {{game.title}}
    </p>
      <img class='game-image my-1' alt="game cover" src={{game.img_url}}>
  </div>
  <div class='col-md-7'>
    <p>
      {{post_body}}
    </p>
  </div>
  <div class='add-comment-container'>
    <h2>
      Comments
    </h2>
    <form class='new-comment-form'>
      <label for='user_name'>
        Username:
      </label>
      <br />
      <textarea id='user_name' name='user_name' placeholder='Username' rows='2' cols='30'>
        {{user_name}}
      </textarea>
      <br />
      <label for='comment'>
        Comment:
      </label>
      <br />
      <textarea id='comment' name='comment' placeholder='Write your comments here.' rows='5' cols='30'>
        {{comment}}
      </textarea>
      <br />
      <button type='submit' value='Submit'>
        Comment
      </button>
    </form>
  </div>
</div>

