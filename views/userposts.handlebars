<div class="row mb-5">
    <div class="col-auto mt-5">
        <h2 class='welcome-junk'>{{username}}'s Posts</h2>
    </div>
</div>



<div class='col-md-12 user-posts'>
    {{#if posts.length}}
    {{#each posts as |post| }}
    <div class='col-md-3 px-2 user-post-game'>
        <div class="game-post text-center">
            <a href="/post/{{post.id}}">
                <h4>
                 {{post.game.title}}
                </h4>
                <img class='user-post-game-image' src='{{post.game.img_url}}'>
            </a>
            <h4>
                <a href="/post/{{post.id}}">{{post.game.title}}</a>
            </h4>
            <h6 class='user-post'>
                {{post.post_body}}
            </h6>
            <p class='user-tag'>{{format_date post.date_created}}</p>
        </div>
        <div class='mt-3 post-game-btns'>
            <button class="btn btn-sm btn-danger delete-post" data-id='{{game.id}}'>DELETE</button>
        </div>
    </div>

    {{/each}}
    {{else}}
        <h3>You haven't posted yet!</h3>
    {{/if}}
</div>



